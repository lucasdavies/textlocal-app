{% extends layout %}

{% block content %}

<p class="lead">
    Messages that have been sent.
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Recipients</th>
            <th>Sent</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        {% for message in messages %}
            <tr>
                <td>{{ message.recipients }}</td>
                <td>{{ message.sent }}</td>
                <td>
                    <a href="{{ url('message', { 'id': message.id }) }}" class="btn btn-primary">View</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<p>
    <a href="{{ url('dashboard') }}">&larr; Return to Dashboard</a>
</p>

{% endblock %}
